<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context=".CommunityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDark"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="190dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/clean_image"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Local Service"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="132dp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="35dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    tools:ignore="OnClick">

                    <ImageView
                        android:id="@+id/noticeId"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/notice_board"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notice Board"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="132dp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDark"
                android:padding="16dp"
                android:layout_marginBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="190dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/residents"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Residents"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_marginTop="132dp"
                        android:gravity="center_horizontal" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="35dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/emergency_no"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Emergency No's"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="132dp"
                        android:gravity="center_horizontal" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>